;; Fonts
(when (display-graphic-p)
  ;; Set default font
  (cl-loop for font in '( "Monaco" "Fira Code" "Hack"
                          "Menlo" "DejaVu Sans Mono")
           when (font-installed-p font)
           return (set-face-attribute 'default nil
                                      :font font
                                      :height (cond (sys/mac-x-p 130)
                                                    (sys/win32p 110)
                                                    (t 100)))))

